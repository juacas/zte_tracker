{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Iniciar Home Assistant Core",
      "type": "debugpy",
      "request": "launch",
      "module": "homeassistant",
      // "program": "${workspaceFolder}/venv/bin/python",
      "args": [
        // "-m",
        // "homeassistant",
        "--config",
        "/workspaces/homeassistant-core"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Tests de Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests",
        "--maxfail=3",
        "--disable-warnings",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Adjuntar al depurador",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/workspaces/home-assistant-core"
        }
      ]
    }
  ]
}